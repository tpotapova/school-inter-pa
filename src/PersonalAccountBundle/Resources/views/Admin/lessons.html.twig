{% extends 'PersonalAccountBundle:Admin:base.html.twig' %}
{% block body %}
    <h2>Все уроки</h2>
    <table id="all_lessons" class="table table-striped table-bordered table-hover ">
        <thead class="thead-inverse">
        <tr>
            <th>Название курса</th>
            <th>Категория (предмет)</th>
            <th>Учитель</th>
            <th>Тариф</th>
            <th>Комиссия</th>
        </tr>
        </thead>
        <tbody>
        {% for value in result %}
            <tr>
                <td><a href="/lessons/{{ value["tl_id"]}}">{{ value['tl_title'] }}</a></td>
                <td>{{ value['l_name'] }}</td>
                <td>{{ value['t_surname'] ~ ' ' ~ value['t_name'] }}</td>
                <td>{{ value['tl_rate'] }}</td>
                <td>{{ value['tl_comission'] }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr>
    <a href="/add_lesson" class="btn btn-primary">Добавить занятие</a>
{% endblock %}
{% block javascripts %}
    <script src ="{{ asset('js/jquery.dataTables.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#all_lessons').DataTable({
                ordering: true,
            });
        });
    </script>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/css/jquery.dataTables.min.css') }}" rel="stylesheet">
{% endblock %}
