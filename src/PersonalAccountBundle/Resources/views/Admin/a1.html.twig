{% extends 'PersonalAccountBundle:Admin:base.html.twig' %}
{% block body %}
    <div class="note">
        <div id="rectangle1"></div>
        <span> - Не заполнено</span>
        <div id="rectangle2"></div>
        <span> - Заполнено</span>
    </div>
    <div id="calendar"></div>
{% endblock %}
{% block javascripts %}
    <script>
        var defaults = {
            'showModalOnLoad': false,
            'events_load_url': '{{ events_load_url }}'
        };
        if (defaults.showModalOnLoad) {
            showModal();
        }
        function showModal() {
            $('#pageopen').modal({
                show: true
            });
        };
    </script>
    <script src ="{{ asset('js/attendance.js') }}"></script>
{% endblock %}
{% block stylesheets %}
    <style>
        #rectangle1, #rectangle2 {
            width:30px;
            height:20px;
            display: inline-block;
            vertical-align: middle;
        }
        #rectangle1 {
            background: blue;
        }
        #rectangle2 {
            background: green;
        }
        .note {
            margin: 0 0 20px;
        }
        .note span {
            padding: 10px 10px 10px 0;
        }
    </style>
{% endblock %}
