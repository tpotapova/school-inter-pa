{% extends 'PersonalAccountBundle:Admin:base.html.twig' %}
{% block body %}
    <div class="modal fade" tabindex="-1" role="dialog" id="pageopen">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Отметить присутствующих</h4>
                    <h3 id="teacher_lesson_caption"></h3>
                    <span id="date_caption"></span>
                    <span id="start_time_caption"></span>
                </div>
                <div class="modal-body">
                    <div class = "table-responsive">
                    {{ form_start(form) }}
                    <table class="table table-bordered table-hover table-striped table-primary list-table">
                        <thead>
                        <tr class="info">
                            <th style="vertical-align: middle;">Ученик</th>
                            <th style="vertical-align: middle;">Присутствие</th>
                            <th>Уважительная причина (при отсутствии)</th>
                        </tr>
                        </thead>
                        <tbody>

                            {% for attendance in form.attendance_collection %}
                                <tr>

                                    <td>{{ form_widget (attendance.student) }}</td>
                                    <td>{{ form_widget(attendance.presence) }}</td>
                                    <td>{{ form_widget(attendance.excuse) }}</td>



                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {{ form_widget(form.save, { 'label': 'Сохранить' }) }}
                    {{ form_end(form) }}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <div id="calendar"></div>
{% endblock %}
{% block javascripts %}
    <script>
        var defaults = {
            'showModalOnLoad': {{ show_modal }},
            'events_load_url': '{{ events_load_url }}'
        };
        if (defaults.showModalOnLoad) {
            showModal();
        }
        function showModal() {
            $('#pageopen').modal({
                show: true
            });
        };
    </script>
    <script src ="{{ asset('js/attendance.js') }}"></script>
{% endblock %}
